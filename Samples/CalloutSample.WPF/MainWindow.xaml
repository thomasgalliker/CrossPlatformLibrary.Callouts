<Window x:Class="CalloutSample.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalloutSample.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <StackPanel Background="Crimson" HorizontalAlignment="Stretch" VerticalAlignment="Center" >
        <Button Content="Show simple callout" Click="Button_OnClick_SimpleCallout" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top"/>
        <Button Content="Show content callout" Click="Button_OnClick_ContentCallout" HorizontalAlignment="Left" Margin="7,7,0,7" VerticalAlignment="Top"/>
    </StackPanel>
</Window>
